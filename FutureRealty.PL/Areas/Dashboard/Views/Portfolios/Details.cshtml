@model PortfolioDetailsVM

@section Header {
    Portfolio Details
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Details for @Model.Name</h3>
        </div>
        <ul>
            
            <li> Status : @(Model.IsDeleted ? "Deleted" : "Active")</li>
            <li> Created : @Model.CreatedAt </li>
            <li> Items :
            <ul>
                @foreach (var item in Model.Items)
                {
                        <li>"@item.Name : @Html.Raw(item.Description) "</li>
                }
            </ul>
                </li>
            
        </ul>
    </div>
</div>
