@model ForgotpasswordVM
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <img src="~/auth/images/signup-image.jpg" alt="Sign up image" />
                <a asp-controller="Account" asp-action="Login" class="signup-image-link">Back to LogIn</a>
                <a asp-controller="Account" asp-action="Register" class="signup-image-link">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Forgot Password</h2>

                @if (TempData["Message"] != null)
                {
                    <div style="color: green; font-weight: bold;">
                        @TempData["Message"]
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary" style="color: red;">
                        @Html.ValidationSummary(true, "", new { @style = "color: red;" })
                    </div>
                }

                <form method="POST" class="register-form" id="login-form" asp-controller="Account" asp-action="SendResetPasswordUrl">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" placeholder="Your Email" />
                        <span asp-validation-for="Email" style="color: red;"></span>
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Send" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    <partial name="_ValidationScriptsPartial" />

</script>

